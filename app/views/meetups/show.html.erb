<h1><%= @meetup.title %></h1>
<p><%= @meetup.description %></p>
<p>Location: <%= @meetup.location_name %></p>
<p>When: <%= @meetup.start_time %></p>

<h2>Attendees</h2>
<ul>
  <% @meetup.users.each do |user| %>
    <li><%= link_to user.name, user_path(user) %></li>
  <% end %>
</ul>

<% if current_user %>
  <% if @meetup.users.include?(current_user) %>
    <%= button_to "Leave Meetup", leave_meetup_path(@meetup), method: :delete %>
  <% else %>
    <%= button_to "Join Meetup", join_meetup_path(@meetup) %>
  <% end %>
<% end %>

<%= link_to "Edit Meetup", edit_meetup_path(@meetup) %>

<%= render "trust_feedbacks/form", meetup: @meetup, feedback: TrustFeedback.new %>
